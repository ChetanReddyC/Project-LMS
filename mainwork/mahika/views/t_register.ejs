    <div id="sd" >
        <label for="text" id="hd">Teacher Details</label>
        <label for="text" id="nam">Name:</label>
        <label for="text" id="em">Email:</label>
        <label for="text" id="ag1">Age:</label>
        <input type="text"id="nm" placeholder="Firstname" >
        <input type="text" id="sn" placeholder="Lastname" >
        <input type="email" placeholder="Email@example.com" id="emf">
        <input type="number" placeholder="Age" id="ag" min="1" max="100">
        <div class="container">
          <div class="wrapper">
             <div class="image">
                <img id="output2" src="uploadpng.png" alt="Upload image here" id="custom-btn" >
             </div>
             <div class="content">
                <div class="icon">
                   <i class="fas fa-cloud-upload-alt"></i>
                </div>
             </div>
             <div id="cancel-btn">
                <i class="fas fa-times"></i>
             </div>
             <div class="file-name">
                File name here
             </div>
          </div>
          <button onclick="document.getElementById('default-btn').click()" id="custom-btn">Select your avatar</button>
          <input id="default-btn" type="file" accept="image/*" onchange="loadFile2(event)" hidden>
       </div>

    </div>
