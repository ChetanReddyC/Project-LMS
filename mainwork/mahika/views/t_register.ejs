    <div id="cd">
        <label for="text" id="hd">Contact Details</label>
        <label for="text" id="nam">Address:</label>
        <label for="text" id="em">Email:</label>
        <label for="tel" id="mn1">Phno:</label>
        <input type="text"id="ad" placeholder="City/Town/Village">
        <input type="text"id="da" placeholder="Address/Street/Doorno">
        <input type="email" placeholder="Email@example.com" id="emf">
        <input type="tel" pattern="[0-9]{10}" id="mn" placeholder="Mobileno" maxlength="10" size="10">
        <div class="container">
            <div class="wrapper">
               <div class="image">
                  <img id="output1" src="uploadpng.png" alt="Upload image here" >
               </div>
               <div class="content">
                  <div class="icon">
                     <i class="fas fa-cloud-upload-alt"></i>
                  </div>
               </div>
               <div id="cancel-btn">
                  <i class="fas fa-times"></i>
               </div>
               <div class="file-name">
                  File name here
               </div>
            </div>
            <button onclick="document.getElementById('default-btn1').click()" id="custom-btn">Select your avatar</button>
            <input id="default-btn1" type="file" accept="image/*" onchange="loadFile1(event)" hidden>
         </div>

    </div>
    <br>
    <div id="ed">
        <label for="text" id="hd">Education Details</label>
        <label for="text" id="nam">SchoolDetails:</label>
        <label for="text" id="em">Studying:</label>
        <label for="text" id="ii">Idinfo:</label>
        <input type="text"id="sc" placeholder="School/Collage">
        <input type="text"id="sa" placeholder="Schooladdress">
        <input type="email" placeholder="Class/Profesonaldeg" id="emf">
        <input type="text" id="rn" placeholder="Name as per idcard">
        <input type="text" id="regn" placeholder="Regno as per idcard">
        <input type="text" id="rno" placeholder="Rollnumber">
        <div class="container">
            <div class="wrapper">
               <div class="image">
                  <img id="output" src="uploadpng.png" alt="Upload image here" >
               </div>
               <div class="content">
                  <div class="icon">
                     <i class="fas fa-cloud-upload-alt"></i>
                  </div>
               </div>
               <div id="cancel-btn">
                  <i class="fas fa-times"></i>
               </div>
               <div class="file-name">
                  File name here
               </div>
            </div>
            <button onclick="document.getElementById('default-btn2').click()" id="custom-btn">Select your avatar</button>
            <input id="default-btn2" type="file" accept="image/*" onchange="loadFile(event)" hidden>
